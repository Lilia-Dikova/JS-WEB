<h1>Home Page</h1>
<p>This is the validation Demo</p>
<div>
    <form method="post">
        <h2>Register:</h2>
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
        <label {{#if errors.email}}class="error"{{/if}}>Email: <input type="email" name="email" {{#if data.email}}value="{{data.email}}"{{/if}} ></label>
        <label {{#if errors.password}}class="error"{{/if}} >Password: <input type="password" name="password" {{#if data.password}}value="{{data.password}}"{{/if}}></label>
        <label {{#if errors.repass}}class="error"{{/if}}>Repeat: <input type="password" name="repass" {{#if data.repass}}value="{{data.repass}}"{{/if}}></label>
        <input type="submit" value="Register">
    </form>
</div>