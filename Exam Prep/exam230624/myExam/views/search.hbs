<section class="search-container">
    <h2>Search Recipes</h2>
    <form class="search-form">
        <input type="text" id="search" name="title" placeholder="Search for recipes..."{{#if data.title}}value="{{data.title}}" {{/if}}>
        <button type="submit">Search</button>
    </form>
    <div class="search-results">
      {{#if recipes}} 
      {{#each recipes}}
      {{> recipe}}
      {{/each}}
      {{else}}
      <p class="no-match">There are no recipes found yet!</p>
      {{/if}}
    </div>
</section>